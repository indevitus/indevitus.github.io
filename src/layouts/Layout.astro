--- 
interface Props {
	title: string;
}

const { title } = Astro.props;

// Astro will bundle and optimize this CSS for you automatically
// This also works for preprocessor files like .scss, .styl, etc.
import '../styles/base.css';

---

<!DOCTYPE html>
<html lang="en" x-data="{ darkMode: true }" :class="darkMode ? 'dark' : ''" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Indevitus d.o.o">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="dark:bg-black bg-white">
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
	}
</style>
