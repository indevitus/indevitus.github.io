---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Team from '../components/Team.astro';
import Hero from '../components/Hero.astro';
import ClientSpotlight from '../components/ClientSpotlight.astro';

import "../../node_modules/@glidejs/glide/dist/css/glide.core.min.css";
---

<script src="../scripts/main.js"></script>

<Layout title="Welcome to Indevitus">
	<Header />
	<main class="dark:text-white">
		<section id="home">
			<Hero />
		</section>

		<section id="team">
			<Team />
		</section>

		<section id="clients" class="container  border-b border-black dark:border-neutral-100">
			<ClientSpotlight />
		</section>

	</main>
	<Footer />
</Layout>

<style is:global>
	.glide__slide {
		height: auto !important;
	}
    .glide__bullet--active { background: black; }
    html.dark .glide__bullet--active { background: white !important; }
</style>
