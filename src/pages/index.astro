---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Team from "../components/Team.astro";
import Hero from "../components/Hero.astro";
import ClientSpotlight from "../components/ClientSpotlight.astro";
import Map from "../components/Map.astro";

import "../../node_modules/@glidejs/glide/dist/css/glide.core.min.css";
import Hiring from '../components/Hiring.astro';

const openPositions = [
	{
		title: 'Dot net developer',
		description: '3 Years + Experience'
	},
	{
		title: 'Senior Frontend developerr',
		description: '4 Years + Experience'
	}
]
---

<script src="../scripts/main.js"></script>
<script
	src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
	integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
	crossorigin=""></script>

<Layout title="Welcome to Indevitus">
	<Header />
	<main class="dark:text-white">
		<section id="home">
			<Hero />
		</section>

		<section id="team">
			<Team />
		</section>

		<section
			id="map"
			class="border-b border-t border-black dark:border-white z-[1]"
		>
			<Map />
		</section>

		<section
			id="hiring"
			class="pt-4"
		>
			<Hiring openPositions={openPositions}/>
		</section>

		<section
			id="clients"
			class="container border-b border-black dark:border-neutral-100"
		>
			<ClientSpotlight />
		</section>
	</main>
	<Footer />
</Layout>

<style is:global>
	.glide__slide {
		height: auto !important;
	}
	.glide__bullet--active {
		background: black;
	}
	html.dark .glide__bullet--active {
		background: white !important;
	}
</style>
