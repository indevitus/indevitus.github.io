---
import HomeLayout from '../layouts/HomeLayout.astro';
import Team from '../components/Team.astro';
import Hero from '../components/Hero.astro';
import ClientSpotlight from '../components/Clients/ClientSpotlight.astro';
import Map from '../components/Map.astro';

import '../../node_modules/@glidejs/glide/dist/css/glide.core.min.css';
import Hiring from '../components/Hiring/Hiring.astro';
import BlobIllustration from "../components/Icons/BlobIllustration.astro";
---

<script src="../scripts/main.js"></script>

<HomeLayout>
	<main class="dark:text-white">
		<div
			id="hero-illustration"
			class="absolute -top-[3%] -right-[calc(100vw-100%)] let-0 lg:right-0 lg:left-[calc(100vw-70%)] text-primary -z-10 pointer-events-none overflow-hidden"
		>
			<BlobIllustration />
		</div>

		<section id="home" class="overflow-hidden">
			<Hero />
		</section>

		<section
			id="clients"
			class="container relative"
		>
			<ClientSpotlight />
		</section>

		<section
			id="hiring"
		>
			<Hiring />
		</section>

		<section id="team">
			<Team />
		</section>

		<section
			id="map"
			class="border-b border-t border-black z-[1]"
		>
			<Map />
		</section>
	</main>
</HomeLayout>
