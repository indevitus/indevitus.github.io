---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Team from "../components/Team.astro";
import Hero from "../components/Hero.astro";
import ClientSpotlight from "../components/ClientSpotlight.astro";
import Map from "../components/Map.astro";

import "../../node_modules/@glidejs/glide/dist/css/glide.core.min.css";
import Hiring from '../components/Hiring.astro';
---

<script src="../scripts/main.js"></script>
<script
	src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
	integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
	crossorigin=""></script>

<Layout title="We are Indevitus">
	<main class="dark:text-white">
		<section id="home" class="overflow-hidden">
			<Hero />
		</section>

		<section
			id="clients"
			class="container relative"
		>
			<ClientSpotlight />
		</section>

		<section
			id="hiring"
		>
			<Hiring />
		</section>

		<section id="team">
			<Team />
		</section>

		<section
			id="map"
			class="border-b border-t border-black z-[1]"
		>
			<Map />
		</section>
	</main>
</Layout>

<style is:global>
	.glide__slide {
		height: auto !important;
	}
	.glide__bullet--active {
		background: black;
	}
	html.dark .glide__bullet--active {
		background: white !important;
	}
</style>
