---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TeamDesktop from '../components/TeamDesktop.astro';
import TeamMobile from '../components/TeamMobile.astro';
import SkillsDesktop from '../components/SkillsDesktop.astro';
import SkillsMobile from '../components/SkillsMobile.astro';

import "../../node_modules/@glidejs/glide/dist/css/glide.core.min.css";
---

<Layout title="Welcome to Indevitus web development">
	<Header />
	<main class="dark:text-white">
		<section id="home" class="container">
			<div class="py-8 lg:py-16 font-display text-4xl lg:text-9xl uppercase border-b border-black dark:border-white">
				<p class="px-8 lg:px-0 text-center">Welcome</p>
			</div>
			<div class="py-8 lg:py-16 font-display text-xl lg:text-3xl lg:leading-10 uppercase border-b border-black dark:border-white ">
				<p class="px-8 lg:px-0 text-center">We are Indevitus. We source exceptional talent and embed them within your company remotely for a reasonable monthly fee.</p>
			</div>
		</section>

		<TeamDesktop />
		<TeamMobile />
		
		<section class="container" id="skills">
			<SkillsDesktop />
			<SkillsMobile />
		</section>	
		<section id="clients" class="container">
			<div class="py-8 lg:py-16 font-display text-xl lg:text-3xl lg:leading-10 uppercase border-b border-black dark:border-white ">
				<p class="px-8 lg:px-0 text-center">Our clients think we are kind of a big deal</p>
			</div>
		</section>
		<section id="contact" class="container">
			<div class="py-16 font-display lg:leading-10 uppercase border-b border-black dark:border-white text-center">
				<p class="px-8 lg:px-0 text-xl lg:text-5xl mb-8 lg:mb-12">Ready to talk?</p>
				<p class="px-8 lg:px-0 text-xl lg:text-3xl">
					<a href="https://www.linkedin.com/company/indevitus/" class="rounded-full bg-black dark:bg-white text-white dark:text-black whitespace-nowrap px-4 lg:px-8 py-4">
						Contact us today
					</a>
				</p>
			</div>
		</section>		
	</main>
	<Footer />
</Layout>

<script>
	import Glide from '@glidejs/glide';

	if (document.querySelector('.glide-team')) {
		new Glide('.glide-team').mount();
	}
	if (document.querySelector('.glide-skills')) {
		new Glide('.glide-skills').mount();
	}
</script>

<style is-global="true">
	.glide__slide { 
		height: auto !important;
	}
    .glide__bullet--active { background: black; }
    html.dark .glide__bullet--active { background: white !important; }
</style>