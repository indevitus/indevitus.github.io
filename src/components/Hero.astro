---
import ComputerLogo from './ComputerLogo.astro'
---

<div id="hero" class="relative z-0 py-16 overflow-hidden xl:overflow-visible">
  <div class="container grid lg:grid-cols-12 gap-x-12 min-h-screen items-center">
    <div data-aos="fade" data-aos-delay="100" data-aos-duration="1400" class="relative z-[100] lg:col-span-7 lg:pt-22 order-last lg:order-first">
      <p class="text-5xl lg:text-7xl font-archivoBlack font-bold pb-8 lg:max-w-[90%]">Solutions that are tailored to your needs</p>
      <p class=" text-xl lg:text-3xl lg:leading-[3rem] pb-5">
        By harnessing the collective expertise of our talented professionals, we deliver solutions that drive real business results and create value for our clients.
      </p>
      <a href="https://www.linkedin.com/company/indevitus/" target="_blank" class="btn">
        <span class="btn--svg__label">Get in touch</span>
        <svg width="190" x="0px" y="0px" viewBox="0 0 60 60" enable-background="new 0 0 60 60" class="btn--svg__circle">
          <circle fill="currentColor" cx="30" cy="30" r="28.7"></circle>
        </svg>
        <svg x="0px" y="0px" viewBox="2 29.3 56.9 13.4" enable-background="new 2 29.3 56.9 13.4" width="190" class="btn--svg__border">
          <g id="Calque_2" class="btn--svg__border--left">
            <path fill="none" stroke="currentColor" stroke-width="0.5" stroke-miterlimit="1" d="M30.4,41.9H9c0,0-6.2-0.3-6.2-5.9S9,30.1,9,30.1h21.4"></path>
          </g>
          <g id="Calque_3" class="btn--svg__border--right">
            <path fill="none" stroke="currentColor" stroke-width="0.5" stroke-miterlimit="1" d="M30.4,41.9h21.5c0,0,6.1-0.4,6.1-5.9s-6-5.9-6-5.9H30.4"></path>
          </g>
        </svg>
      </a>
    </div>

    <div class="relative lg:col-span-5 mx-auto  text-black w-[300px] xs:w-[400px] lg:w-full pt-[96px] lg:pt-0 xl:mr-[-70px]">
      <div class="relative z-[100]" data-aos="fade" data-aos-delay="100" data-aos-duration="1400">
        <ComputerLogo  />
      </div>

      <span id="hero-illustration" class="absolute rotate-[118deg] right-0 -top-[86%] -left-3/4 lg:-rotate-[4deg] text-gold/80 z-50 pointer-events-none">
        <svg xmlns="http://www.w3.org/2000/svg" width="1491" height="1161" viewBox="0 0 1491 1161" fill="currentColor" class="min-h-[120vh] min-w-[100vw]">
