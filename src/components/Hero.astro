---
import ComputerLogo from './Icons/ComputerLogo.astro'
import BlobIllustration from "./Icons/BlobIllustration.astro"
---

<div id="hero" class="relative z-0 py-16 overflow-hidden xl:overflow-visible">
  <div class="container grid lg:grid-cols-12 gap-x-12 min-h-screen items-center">
    <div data-aos="fade" data-aos-delay="100" data-aos-duration="1400" class="relative z-[100] lg:col-span-7 lg:pt-22 order-last lg:order-first">
      <p class="text-5xl lg:text-7xl font-archivoBlack font-bold pb-8 lg:max-w-[90%]">Solutions that are tailored to your needs</p>
      <p class="text-xl lg:text-3xl lg:leading-[3rem] pb-10">
        By harnessing the collective expertise of our talented professionals, we deliver solutions that drive real business results and create value for our clients.
      </p>
      <a href="https://www.linkedin.com/company/indevitus/" target="_blank" class="btn">
        <span class="btn--svg__label">Get in touch</span>
        <svg width="210" x="0px" y="0px" viewBox="0 0 60 60" enable-background="new 0 0 60 60" class="btn--svg__circle">
          <circle fill="currentColor" cx="30" cy="30" r="28.7"></circle>
        </svg>
        <svg x="0px" y="0px" viewBox="2 29.3 56.9 13.4" enable-background="new 2 29.3 56.9 13.4" width="210" class="btn--svg__border">
          <g id="Calque_2" class="btn--svg__border--left">
            <path fill="none" stroke="currentColor" stroke-width="0.5" stroke-miterlimit="1" d="M30.4,41.9H9c0,0-6.2-0.3-6.2-5.9S9,30.1,9,30.1h21.4"></path>
          </g>
          <g id="Calque_3" class="btn--svg__border--right">
            <path fill="none" stroke="currentColor" stroke-width="0.5" stroke-miterlimit="1" d="M30.4,41.9h21.5c0,0,6.1-0.4,6.1-5.9s-6-5.9-6-5.9H30.4"></path>
          </g>
        </svg>
      </a>
    </div>

    <div class="relative lg:col-span-5 mx-auto  text-black w-[300px] xs:w-[400px] lg:w-full pt-[96px] lg:pt-0 xl:mr-[-70px]">
      <div class="relative z-[100]" data-aos="fade" data-aos-delay="100" data-aos-duration="1400">
        <ComputerLogo  />
      </div>

      <span id="hero-illustration" class="absolute rotate-[118deg] right-0 -top-[86%] -left-3/4 lg:-rotate-[4deg] text-primary z-50 pointer-events-none">
        <BlobIllustration />
      </span>
    </div>
  </div>
</div>

<style>
  .btn {
    @apply text-base tracking-wider leading-4 relative inline-block h-[48px] w-[210px] overflow-hidden rounded-3xl;
  }

  .btn:hover .btn--svg__label {
    @apply text-black dark:text-white;
  }

  .btn:hover .btn--svg__circle circle {
    @apply scale-0;
  }

  .btn--svg__label {
    @apply font-bold text-white dark:text-black z-[3] text-center w-full transition-all duration-250 ease-in-out;
  }

  .btn svg,
  .btn--svg__label {
    @apply absolute top-[50%] left-[50%] -translate-x-[50%] -translate-y-[50%] origin-center;
  }

  .btn--svg__circle circle {
    @apply transition-all duration-250 ease-in-out scale-110 origin-center;
  }

  .btn:hover .btn--svg__border--left path,
  .btn:hover .btn--svg__border--right path {
    stroke-dashoffset: 0;
    transition-delay: 0.25s;
    transition-duration: 0.5s;
    transition-timing-function: ease-in-out;
    transition-property: stroke-dashoffset;
  }

  .btn--svg__border--left path,
  .btn--svg__border--right path {
    stroke-dasharray: 62 62;
    transition-duration: 0s;
    transition-timing-function: ease-in-out;
    transition-property: stroke-dashoffset;
    transition-delay: 0.5s;
  }

  .btn--svg__border--left path {
    stroke-dashoffset: -62;
  }

  .btn--svg__border--right path {
    stroke-dashoffset: 62;
  }
</style>
