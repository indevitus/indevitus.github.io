---
import { JOB_DESCRIPTION as jobs } from '../../data';

const hiringJobs = ['senior-frontend', 'web-design'];
const openPositions = jobs.filter((job: any) => hiringJobs.includes(job.id));
---

<ul
  class="pt-5 lg:pl-28 lg:pt-0 space-y-4 mb-10 text-black max-w-fit mx-auto lg:mx-0"
>
  {
    openPositions?.map((openPosition: any) => {
      const jobExperience = openPosition?.summary.experience;

      return (
        <li class="w-fit">
          <a href={`careers/${openPosition.id}`}>
            <p class="open-position">
              {openPosition.title}
            </p>
            <span class="text-base text-black font-semibold">
              {jobExperience.includes("year") ? `${jobExperience} experience` : jobExperience}
            </span>
          </a>
        </li>
      );
    })
  }
</ul>

<style>
  .open-position {
    @apply relative z-[1] xs:text-lg sm:text-3xl lg:text-2xl 2xl:text-3xl p-2 px-2 sm:px-3 font-bold mb-1 whitespace-nowrap font-archivoBlack;
  }

  .open-position::before{
    @apply content-[''] bg-white absolute left-0 top-0 hover:-top-2 w-full h-full -z-[1] transition-all duration-500 ease-in-out;
  }
</style>
